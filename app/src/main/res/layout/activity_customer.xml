<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer"
    android:background="@drawable/gradient">

    <Button
        android:id="@+id/Fetch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/Barcode"
        android:background="@drawable/button_style"
        android:text="Fetch"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_below="@+id/Fetch"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="148dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/list"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"></ListView>

        <ListView
            android:id="@+id/list1"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"></ListView>

        <ListView
            android:id="@+id/list2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"></ListView>

    </LinearLayout>

    <TextView
        android:id="@+id/Barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_style"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Barcode"
        android:inputType="textPersonName"
        android:textSize="22sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="129dp"
        android:background="?android:attr/listDivider" />

    <ImageView
        android:id="@+id/cscan"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_alignTop="@+id/Barcode"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="148dp"
        android:layout_marginRight="148dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        tools:ignore="VectorDrawableCompat" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="69dp"
        android:background="@drawable/button_style"
        android:text="Logout"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="177dp"
        android:layout_marginLeft="177dp"
        android:layout_marginTop="69dp"
        android:background="@drawable/button_style"
        android:text="checkout"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Barcode"
        android:layout_alignParentTop="true"
        android:layout_marginTop="164dp"
        android:text="Product Name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/checkout"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginStart="11dp"
        android:layout_marginTop="0dp"
        android:text="Price"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Fetch"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginStart="11dp"
        android:layout_marginTop="0dp"
        android:text="Weight"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginStart="-49dp"
        android:layout_marginTop="-1dp"
        android:layout_toEndOf="@+id/logout"
        android:text="Long Press On Product to Delete"
        android:textSize="14sp"
        android:textStyle="bold" />
</RelativeLayout>